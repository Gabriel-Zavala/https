pipeline {
    agent any

    stages {
        // Parar los servicios que ya existen o en todo caso hacer caso omiso
        stage('Parando los servicios...') {
            steps {
                bat '''
                    docker compose -p adj-demo-c down || exit /b 0
                '''
            }
        }

        // Eliminar las imágenes creadas por ese proyecto
        stage('Eliminando imágenes anteriores...') {
            steps {
                bat '''
                    for /f "tokens=*" %%i in ('docker images --filter "label=com.docker.compose.project=adj-demo-c" -q') do (
                        docker rmi -f %%i
                    )
                    if errorlevel 1 (
                        echo No hay imagenes por eliminar
                    ) else (
                        echo Imagenes eliminadas correctamente
                    )
                '''
            }
        }

        // Del recurso SCM configurado en el job, jala el repo
        stage('Obteniendo actualización...') {
            steps {
                checkout scm
            }
        }

        // Crear red y volúmenes necesarios si no existen
        stage('Creando recursos Docker...') {
            steps {
                bat '''
                    docker network create --driver bridge adj-net 2>nul || echo Red adj-net ya existe
                    docker volume create adj-volume 2>nul || echo Volumen adj-volume ya existe
                    docker volume create certbot-conf 2>nul || echo Volumen certbot-conf ya existe
                '''
            }
        }

        // Generar certificados SSL si no existen
        stage('Generando certificados SSL...') {
            steps {
                bat '''
                    docker run --rm -v certbot-conf:/certs alpine sh -c "if [ ! -f /certs/live/localhost/keystore.p12 ]; then echo Generando certificados SSL...; apk add --no-cache openssl; mkdir -p /certs/live/localhost; cd /certs/live/localhost; openssl genrsa -out privkey.pem 2048; openssl req -new -x509 -key privkey.pem -out fullchain.pem -days 365 -subj '/CN=localhost'; openssl pkcs12 -export -in fullchain.pem -inkey privkey.pem -out keystore.p12 -name localhost -password pass:changeit -noiter -nomaciter; echo Certificados generados exitosamente; else echo Los certificados ya existen, omitiendo generacion; fi"
                '''
            }
        }

        // Construir y levantar los servicios
        stage('Construyendo y desplegando servicios...') {
            steps {
                bat '''
                    cd ADJ-demo-c
                    docker compose up --build -d
                '''
            }
        }
    }

    post {
        success {
            echo 'Pipeline ejecutado con éxito'
        }

        failure {
            echo 'Hubo un error al ejecutar el pipeline'
        }

        always {
            echo 'Pipeline finalizado'
        }
    }
}